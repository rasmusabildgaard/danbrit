# ============================================
# Danbrit Direct - Miljøvariabler
# Kopiér denne fil til .env.local og udfyld værdierne
# ============================================

# Database (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://user:password@localhost:5432/danbrit?schema=public"

# NextAuth
# Generer med: openssl rand -base64 32
NEXTAUTH_SECRET="din-hemmelige-nøgle-her"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# Business Central Integration
# ============================================
BC_BASE_URL="https://api.businesscentral.dynamics.com/v2.0/tenant-id/environment/api/v2.0"
BC_TENANT_ID=""
BC_ENVIRONMENT="production"

# Vælg én autentifikationsmetode:
# Option 1: API Key
BC_API_KEY=""

# Option 2: Basic Auth
BC_USERNAME=""
BC_PASSWORD=""

# Option 3: OAuth2 (anbefales til produktion)
BC_CLIENT_ID=""
BC_CLIENT_SECRET=""

# ============================================
# Eksterne API'er
# ============================================

# Nummerplade-opslag API
LICENSE_PLATE_API_URL=""
LICENSE_PLATE_API_KEY=""

# ============================================
# Feature Flags
# ============================================
ENABLE_LICENSE_PLATE_SEARCH="true"
ENABLE_NEWSLETTER="true"

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_LOGIN_MAX="5"
RATE_LIMIT_LOGIN_WINDOW_MS="900000"
RATE_LIMIT_API_MAX="100"
RATE_LIMIT_API_WINDOW_MS="60000"

# ============================================
# Logging & Monitoring
# ============================================
LOG_LEVEL="info"

# ============================================
# Site Configuration
# ============================================
NEXT_PUBLIC_SITE_URL_DK="https://danbritdirect.dk"
NEXT_PUBLIC_SITE_URL_COM="https://danbrit.com"
NEXT_PUBLIC_DEFAULT_CURRENCY="DKK"

